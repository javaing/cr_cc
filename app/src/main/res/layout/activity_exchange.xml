<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true">

    <RelativeLayout
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/please_login"
                android:maxWidth="200dp"
                android:visibility="gone"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="17sp"/>

        <ImageView
                android:visibility="visible"
                android:id="@+id/titleBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/fanhui_bbb"
                android:drawablePadding="6dp"
                android:padding="10dp"
                />

        <TextView
                android:visibility="invisible"
                android:id="@+id/title_right_but"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="@string/skip"
                android:textColor="@color/white"
                android:textSize="15sp"/>
    </RelativeLayout>

    <ImageView
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:src="@mipmap/logo_dingxiang"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="20dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp">

            <com.aliee.quei.mo.widget.view.ETextWithDelete

                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:hint="@string/my_exchange"
                    android:paddingLeft="12dp"
                    android:id="@+id/editExchageCode"
                    android:background="@drawable/bg_exchange"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_btn_login2"
        android:gravity="center"
        android:textColor="@color/text_color_selector_white_btn"
        android:text="@string/exchange"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="18dp"
        android:textSize="18sp"
        android:enabled="false"
        android:id="@+id/btnExchange"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_999999"
        android:text="@string/exchange_remind"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="18dp"
        android:textSize="18sp" />

</LinearLayout>
