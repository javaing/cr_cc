<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#66000000">
    <RelativeLayout
        android:layout_width="245dp"
        android:layout_height="345dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="beta_title"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="beta_upgrade_info"
            android:visibility="gone"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/bg_upgrade"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_new_version"
            android:textColor="#ff323232"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:id="@+id/textFindNew"
            />
        <TextView
            android:tag="beta_upgrade_feature"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/textFindNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff666666"
            android:lineSpacingExtra="2dp"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="206dp"
            android:layout_height="41dp"
            android:gravity="center"
            android:text="@string/update_now"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:background="@mipmap/bg_btn_upgrade"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:tag="beta_confirm_button"/>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/ic_close_ticket_give"
        android:tag="beta_cancel_button"
        android:textColor="@color/transparent"/>
</LinearLayout>