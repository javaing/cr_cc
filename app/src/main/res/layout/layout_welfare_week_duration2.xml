<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/bg_welfare_item">
    <TextView style="@style/welfare_item_title"
              android:text="周阅读奖励"/>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/colorDivider"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:padding="10dp"
    android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvWeekTitle"
                android:text="本周阅读时长 0 分钟"
                android:textColor="#ff333333"
                android:textSize="15sp"/>
        <Space android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注：每周一凌晨重新计算"
                android:textColor="#ffb3b3b3"
                android:textSize="12sp"/>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/colorDivider"/>
    <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/rvWeek"/>
</LinearLayout>