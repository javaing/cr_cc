<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp">

    <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="2dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            app:cardBackgroundColor="@color/white">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_item_price"
                android:id="@+id/layoutPrice"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvPrice"
                        android:textStyle="bold"
                            android:textColor="@color/boxing_black"
                            android:textSize="18sp"
                            tools:text="9.00元"/>
<!--
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvPrice_s"
                            android:textColor="#f44336"
                            android:textSize="16sp"
                            tools:text="（多送30元）"/>-->
                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                      >

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvAmount"
                            android:textSize="14sp"
                            android:textColor="#f44336"
                            tools:text="10000+5000"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:id="@+id/tvExtra_vip"
                            android:textSize="14sp"
                            android:text="金币"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:id="@+id/tvExtra"
                        android:textColor="@color/boxing_black"
                        android:textSize="14sp"
                        tools:text="多送50元"/>
                    <TextView
                        android:id="@+id/tag_hot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:background="@drawable/price_hot_bg"
                        android:text="热销"/>
                    <TextView
                        android:id="@+id/tag_promote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:background="@drawable/price_hot_promote"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>


            </LinearLayout>

            <com.haozhang.lib.SlantedTextView
                    android:id="@+id/rotate_textview"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    app:slantedBackgroundColor="#e84040"
                    app:slantedMode="right"
                    app:slantedTextColor="#ffffff"
                    app:slantedTextSize="12sp"
                    app:slantedLength="25dp"
                    app:slantedText="最佳选择"
                    android:visibility="visible"
                    android:layout_marginBottom="10dp"
                    />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>