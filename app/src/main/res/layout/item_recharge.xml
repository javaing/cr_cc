<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

        <TextView
                android:id="@+id/price"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/selector_recharge_item"
                android:textSize="14sp"
                android:textStyle="bold"/>
        <View android:layout_width="match_parent"
              android:layout_height=".5dp"
              android:id="@+id/divider"
              android:background="@drawable/selector_recharge_item_divider"
              android:layout_marginTop="8dp"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:layout_marginBottom="8dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/selector_recharge_item"
                android:maxLines="1"
                android:id="@+id/bean"/>
        <TextView
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="多送0元"
                android:textColor="#E1483C"
                android:textSize="10sp"
                android:id="@+id/beanExtra"/>
    </LinearLayout>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:src="@mipmap/ic_recharge_vip_tag"
    android:id="@+id/tagVip"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:scaleType="fitXY"
    android:id="@+id/tagRight"/>
</RelativeLayout>
