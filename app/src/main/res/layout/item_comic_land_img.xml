<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="3dp"
              android:layout_marginRight="3dp">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="2dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:id="@+id/ivLand"/>

            <com.haozhang.lib.SlantedTextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:slantedTextColor="@color/white"
                    app:slantedMode="right"
                    android:layout_alignParentEnd="true"
                    app:slantedBackgroundColor="#f44336"
                    app:slantedLength="30dp"
                    app:slantedTextSize="12sp"
                    app:slantedText="限免"
                    android:id="@+id/tagRight"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_comic_land_info"
                    android:layout_alignParentBottom="true"
                    android:paddingTop="40dp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:gravity="end"
                        android:id="@+id/tvTitle"
                        tools:text="水蛭"
                        android:textColor="@color/main_text"
                        android:padding="6dp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:paddingEnd="6dp"
                        android:paddingStart="0dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTagStatus"
                            android:background="@mipmap/bg_tag_status_finish"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            android:paddingStart="6dp"
                            android:paddingEnd="10dp"
                            android:text="完结"
                            android:textSize="12sp"
                            android:textColor="@color/main_text"/>

                    <Space
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@mipmap/ic_star_num"
                            android:textSize="12sp"
                            android:drawablePadding="2dp"
                            android:id="@+id/tvStar"
                            android:text="9.0"
                            android:textColor="@color/main_text"
                            />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@mipmap/ic_read_num"
                            android:layout_marginStart="6dp"
                            android:drawablePadding="2dp"
                            android:id="@+id/tvViewNum"
                            android:textSize="12sp"
                            android:text="10086"
                            android:textColor="@color/main_text"
                            />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:padding="5dp"
            android:id="@+id/tvDescr"
            android:lineSpacingExtra="4dp"
            android:textColor="#979797"/>
</LinearLayout>