<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="18dp"
    android:paddingLeft="10dp"
    android:paddingBottom="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tvHomePage"
            style="@style/shop.category.name"
            android:text="@string/home_homepage" />

        <TextView
            android:id="@+id/tvHomeSerial"
            style="@style/shop.category.name"
            android:text="@string/home_serial" />

        <TextView
            android:id="@+id/tvHomeFinish"
            style="@style/shop.category.name"
            android:text="@string/home_finish" />

        <TextView
            android:id="@+id/tvHomeRanking"
            style="@style/shop.category.name"
            android:text="@string/home_ranking" />

        <TextView
            android:id="@+id/tvHomeJapan"
            style="@style/shop.category.name"
            android:text="@string/home_japancomic" />

        <TextView
            android:id="@+id/tvHomeFree"
            style="@style/shop.category.name"
            android:text="@string/free" />

        <TextView
            android:id="@+id/tvHomeRecharge"
            style="@style/shop.category.name"
            android:text="@string/home_recharge" />

        <TextView
            android:id="@+id/tvHomeBulletin"
            style="@style/shop.category.name"
            android:layout_marginLeft="18dp"
            android:text="@string/bulletin" />

    </LinearLayout>
</HorizontalScrollView>