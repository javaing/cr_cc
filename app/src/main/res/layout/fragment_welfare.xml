<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_title" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/layout_welfare_level" />

                <include layout="@layout/layout_welfare_income" />

                <include layout="@layout/layout_welfare_checkin" />

                <include
                    android:id="@+id/layoutNewbie"
                    layout="@layout/layout_welfare_newbie" />

                <include
                    android:id="@+id/layoutTickets"
                    layout="@layout/layout_welfare_ticket" />

                <include layout="@layout/layout_welfare_daily" />

                <include layout="@layout/layout_welfare_week_duration2" />
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</FrameLayout>
