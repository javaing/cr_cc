<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom"
    android:orientation="horizontal"
    android:paddingLeft="3dp"
    android:paddingRight="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="0dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/img_hot_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tv_HotNum"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:maxLines="1"
                    android:textColor="@color/main_text"
                    android:textSize="13.33sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/bg_hotrank_num"
                    android:text="1" />

                <TextView
                    android:id="@+id/tv_HotTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_HotNum"
                    android:layout_marginLeft="3dp"
                    tools:text="女大生世晶"
                    android:textColor="@color/main_text"
                    android:textSize="13.33sp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_HotDescr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:minLines="2"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_CACACA"
                android:textSize="12sp"
                android:text="最终话" />


            <LinearLayout
                android:id="@+id/layout_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHotStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:text="9.0"
                    android:textColor="@color/text_light_blue"
                    android:textSize="12sp"
                    app:drawableStartCompat="@mipmap/ic_star_num" />


                <TextView
                    android:id="@+id/tvHotType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:minWidth="35dp"
                    android:textSize="12sp"
                    android:padding="2dp"
                    android:textColor="#BA5800"
                    android:gravity="center_horizontal"
                    android:background="@color/hot_rank_tag"
                    android:text="都市" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>