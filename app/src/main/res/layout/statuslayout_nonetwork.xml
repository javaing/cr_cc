<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone"
    xmlns:tools="http://schemas.android.com/tools"
    tools:visibility="visible"
    android:background="#66000000">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/bg_dialog_custom"
    android:padding="16dp">
        <ImageView
            android:id="@+id/no_network_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_no_net"/>

        <TextView
            android:id="@+id/no_network_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="20dp"
            android:text="@string/msg_no_net"
            android:textSize="14sp"
            android:textColor="#999"/>

        <TextView
            android:id="@+id/no_network_reload_btn"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/reload"
            android:textSize="12sp"
            android:textColor="@color/btn_refresh"
            android:background="@drawable/bg_btn_refresh"/>
    </LinearLayout>
</LinearLayout>