<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp">

    <android.support.v7.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="2dp"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            app:cardBackgroundColor="@color/white">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_item_price"
                android:id="@+id/layoutPrice"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvPrice"
                            android:textColor="#f44336"
                            android:textSize="14sp"
                            tools:text="9.00"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvPrice_s"
                            android:textColor="#f44336"
                            android:textSize="16sp"
                            tools:text="（多送30元）"/>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="20dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvAmount"
                            android:textSize="12sp"
                            android:textColor="#333"
                            tools:text="900金币"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:id="@+id/tvExtra_vip"
                            android:textColor="#f44336"
                            android:visibility="gone"
                            android:textSize="12sp"
                            tools:text="首充双倍"/>
                </LinearLayout>


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:id="@+id/tvExtra"
                        android:layout_marginTop="5dp"
                        android:textColor="#f44336"
                        android:textSize="16sp"
                        tools:text="首充双倍"/>
            </LinearLayout>

            <com.haozhang.lib.SlantedTextView
                    android:id="@+id/rotate_textview"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    app:slantedBackgroundColor="#e84040"
                    app:slantedMode="right"
                    app:slantedTextColor="#ffffff"
                    app:slantedTextSize="12sp"
                    app:slantedLength="25dp"
                app:slantedText="最佳选择"
                    android:visibility="visible"
                    android:layout_marginBottom="10dp"
                    />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ivTag"
            android:text="特惠"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:src="@mipmap/hot"
            android:scaleType="fitXY"
            android:translationZ="10dp"/>
</FrameLayout>