<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item   android:state_selected="true" >
        <layer-list android:paddingRight="10dp" android:paddingLeft="10dp">
            <item android:top="0dp" android:left="5dp" android:right="5dp" android:bottom="0dp">
                <shape android:shape="rectangle" >
                    <corners android:radius="14dp" />
                    <solid android:color="#D81419" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/text_CACACA"
                        />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_selected="false">
        <layer-list >
            <item android:top="0dp" android:left="5dp" android:right="5dp" android:bottom="0dp">
                <shape android:shape="rectangle" >
                    <corners android:radius="14dp" />
                    <solid android:color="#121212" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/text_CACACA"
                        />
                    <padding android:left="10dp" android:right="0dp" android:bottom="0dp" android:top="0dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>